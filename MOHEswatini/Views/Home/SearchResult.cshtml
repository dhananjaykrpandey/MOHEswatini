@model IEnumerable<MOHEswatini.Models.mDiseaseSurveillance>

@{
    ViewData["Title"] = "SearchResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Search Record</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form role="form" asp-action="SearchResult">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-2">
                                    <div class="form-group float-right">
                                        <label for="exampleInputEmail1">Passport No</label>
                                    </div>
                                </div>
                                @{
                                    <div class="col-md-4 col-sm-4">
                                        <div class="form-group">

                                            <input type="text" class="form-control" name="passportno" id="exampleInputEmail1" placeholder="Enter passport to search details">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-4">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">  <i class="fas fa-search"></i> Search</button>
                                        </div>
                                    </div>
                                }
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-lg=12">
                                    <table id="example1" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ArrivalDate)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ArrivedBy)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.VehicleNo)
                                                </th>
                                                @*<th>
                                                        @Html.DisplayNameFor(model => model.SeatNo)
                                                    </th>*@
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PointOfEntry)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ContactNo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PassportNo)
                                                </th>

                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                if (Model != null)
                                                {
                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ArrivalDate)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ArrivedBy)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.VehicleNo)
                                                            </td>
                                                            @*<td>
                                                                    @Html.DisplayFor(modelItem => item.SeatNo)
                                                                </td>*@
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.PointOfEntry)
                                                            </td>

                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Name)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.ContactNo)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.PassportNo)
                                                            </td>

                                                            <td>
                                                                <a asp-action="Print" asp-route-id="@item.iID" class="btn btn-success btn-sm" title="Print Record" target="_blank"><i class="fas fa-print"></i></a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }

                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ArrivalDate)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ArrivedBy)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.VehicleNo)
                                                </th>
                                                @*<th>
                                                        @Html.DisplayNameFor(model => model.SeatNo)
                                                    </th>*@
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PointOfEntry)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ContactNo)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.PassportNo)
                                                </th>

                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        @*<div class="card-footer">

                            </div>*@
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>

